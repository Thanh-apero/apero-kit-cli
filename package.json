{
  "name": "apero-kit-cli",
  "version": "1.4.0",
  "description": "CLI tool to scaffold AI agent projects with pre-configured kits (Claude, OpenCode, Codex)",
  "type": "module",
  "bin": {
    "ak": "bin/ak.js",
    "apero-kit": "bin/ak.js"
  },
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./kits": "./src/kits/index.js"
  },
  "scripts": {
    "start": "node bin/ak.js",
    "link": "npm link",
    "unlink": "npm unlink",
    "test": "node --test src/**/*.test.js",
    "prepublishOnly": "echo 'Ready to publish!'"
  },
  "files": [
    "bin",
    "src",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "ai",
    "agent",
    "claude",
    "claude-code",
    "opencode",
    "codex",
    "cli",
    "scaffold",
    "template",
    "llm",
    "apero"
  ],
  "author": "Apero Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Thanh-apero/apero-kit-cli.git"
  },
  "homepage": "https://github.com/Thanh-apero/apero-kit-cli#readme",
  "bugs": {
    "url": "https://github.com/Thanh-apero/apero-kit-cli/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.15",
    "ora": "^8.0.1"
  }
}
